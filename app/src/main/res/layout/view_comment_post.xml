<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_comment_dialog"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#F4F5F6"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_comment_dialog"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_rounded_rectangle_white"
        android:gravity="left"
        android:hint="说点什么吧..."
        android:padding="6dp"
        android:textColor="#666666"
        android:textColorHint="#999999"
        android:textSize="15sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_text_count"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text="0"
            android:textSize="14sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_limit_count"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/tv_text_count"
            android:text="/150字"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_limit_remind"
            android:layout_width="wrap_content"
            android:text="（已超过限定字数）"
            android:layout_toRightOf="@+id/tv_limit_count"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:textColor="#F13930"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cb_anonymity"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/tv_send_post"
            android:layout_marginRight="10dp"
            android:text="匿名"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_send_post"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_rounded_rectangle_blue"
            android:gravity="center"
            android:text="发表"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </RelativeLayout>


</LinearLayout>